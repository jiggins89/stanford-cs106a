// This program is used for helping the user figure 
// out how to complete the pyramid problem in 
// chapter 2

import acm.program.*;

public class PyramidWIP extends ConsoleProgram{
	
	private static final long serialVersionUID = -7078232128635224616L;
	
	/** Width of each brick in pixels */
	private static final int BRICK_WIDTH = 30;

/** Width of each brick in pixels */
	private static final int BRICK_HEIGHT = 12;

/** Number of bricks in the base of the pyramid */
	private static final int BRICKS_IN_BASE = 14;

	public void run() {
		
		// calculate starting 'y' coordinate
		int sy = (getHeight()-BRICK_HEIGHT);
		// calculate starting 'x' coordinate
		int sx = (getWidth()-(BRICK_WIDTH*BRICKS_IN_BASE))/2;	
		
		int w = (getWidth());
		int h = (getHeight());
		
		println ("w: "+w);
		println ("h: "+h);
		println ("sx ("+h+"-12): "+sx);
		println ("sy ("+w+"-30): "+sy);
	}	
}